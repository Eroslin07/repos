<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newtouch.uctp.module.business.dal.mysql.MerchantCashMapper">

    <resultMap id="BaseResultMap" type="com.newtouch.uctp.module.business.dal.dataobject.cash.MerchantCashDO">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="account_id" jdbcType="BIGINT" property="accountId"/>
        <result column="account_no" jdbcType="VARCHAR" property="accountNo"/>
        <result column="pay_channel" jdbcType="CHAR" property="payChannel"/>
        <result column="profit_loss_type" jdbcType="CHAR" property="profitLossType"/>
        <result column="tran_record_no" jdbcType="VARCHAR" property="tranRecordNo"/>
        <result column="pay_amount" jdbcType="INTEGER" property="payAmount"/>
        <result column="trade_type" jdbcType="CHAR" property="tradeType"/>
        <result column="trade_to" jdbcType="CHAR" property="tradeTo"/>
        <result column="contract_no" jdbcType="VARCHAR" property="contractNo"/>
        <result column="account_balance" jdbcType="INTEGER" property="accountBalance"/>
        <result column="revision" jdbcType="INTEGER" property="revision"/>
        <result column="creator" jdbcType="VARCHAR" property="creator"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="updater" jdbcType="VARCHAR" property="updater"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="deleted" jdbcType="INTEGER" property="deleted"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        account_id,
        account_no,
        pay_channel,
        profit_loss_type,
        tran_record_no,
        pay_amount,
        trade_type,
        trade_to,
        contract_no,
        account_balance,
        revision,
        creator,
        create_time,
        updater,
        update_time,
        deleted
    </sql>

    <select id="queryContractNoAmount" resultMap="BaseResultMap">
        select account_no,
        sum(pay_amount) as pay_amount
        from uctp_merchant_cash
        where contract_no = #{contractNo}
        and trade_type in
        <foreach collection="tradeTypes" item="item" index="index" open="(" close=")" separator=",">
            #{item}
        </foreach>
        group by contract_no
    </select>

</mapper>
